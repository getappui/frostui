{
  "name": "@frostui/tailwindcss",
  "description": "FrostUI is a component library built upon tailwindcss (Utility first CSS framework)",
  "repository": "https://github.com/getappui/frostui",
  "homepage": "https://github.com/getappui/frostui",
  "private": false,
  "version": "0.1.1",
  "exports": {
    ".": {
      "import": "./dist/frostui.mjs",
      "require": "./dist/frostui.cjs.js"
    },
    "./plugin": "./plugin.js"
  },
  "main": "./dist/frostui.js",
  "module": "./dist/frostui.mjs",
  "typings": "./dist/frostui.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "build:npm": "rm -r -f dist && tsc && vite build && mv dist/index.d.ts dist/frostui.d.ts",
    "dev": "vite"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.2.6",
    "tailwindcss": "^3.3.1"
  },
  "devDependencies": {
    "@lopatnov/rollup-plugin-uglify": "^2.1.5",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/node": "^18.15.11",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "terser": "^5.16.8",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "vite": "^4.2.1"
  },
  "keywords": [
    "frostui",
    "tailwind",
    "tailwindcss",
    "component",
    "accordion",
    "collapse",
    "dropdown",
    "modal",
    "offcanvas",
    "tab",
    "tooltip",
    "dismissable"
  ]
}
